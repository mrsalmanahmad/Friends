<% if user_signed_in? %>
<h1>Friends List</h1>
<table class="table table-striped table-bordered table-hover">
<thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th>User id</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
     <% if friend.user == current_user %>
      <tr>
        <td>
        <%= link_to friend.first_name+' '+friend.last_name, friend %>
        </td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
        <td><%= friend.user_id %></td>
        <%# <td><%= link_to 'Show', friend %>
        <td><%= link_to 'Edit', edit_friend_path(friend) %></td>
        <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger" %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path, class:"btn btn-secondary" %>
<%else%>
<h1>Please Login First</h1>
<p>Find me in app/views/home/index.html.erb</p>
<%end%>